{
  "_id":"accounts",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": true,
  "description": "Accounts represent tenants or customers on the system. Each account represents an individual dataset or sandbox that only one tenant can access. The data set is architecturally independent from other tenants.",
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "name": "Name",
      "description": "A friendly name for the account",
      "minLength": 1,
      "maxLength": 128
    },
    "realm": {
      "type": "string",
      "required": false,
      "name": "Realm",
      "description": "The realm of the account, ie: 'account1.2600hz.com'",
      "minLength": 4,
      "maxLength": 253,
      "pattern": "^([.\\w_-]+)$"
    },
    "timezone": {
      "type": "string",
      "required": true,
      "name": "Default Timezone",
      "description":"The default timezone",
      "minLength": 5,
      "maxLength": 32,
      "default": "America/Los_Angeles"
    },
    "enabled": {
      "type": "boolean",
      "required": false,
      "name": "Is Enabled?",
      "description": "Determines if the account is currently enabled",
      "default": true
    },
    "caller_id": {
      "type": "object",
      "required": false,
      "description": "The account default caller ID parameters",
      "properties": {
        "internal": {
          "type": "object",
          "required": false,
          "name": "Default Internal Caller-ID",
          "description": "The default caller ID used when dialing internal extensions",
          "properties": {
            "name": {
              "type": "string",
              "required": false,
              "name": "Name",
              "description": "The caller id name for the object type",
              "maxLength": 30
            },
            "number": {
              "type": "string",
              "required": false,
              "name": "Number",
              "description": "The caller id name for the object type",
              "maxLength": 15
            }
          }
        },
        "external": {
          "type": "object",
          "required": false,
          "name": "Default External Caller-ID",
          "description": "The default caller ID used when dialing external numbers",
          "properties": {
            "name": {
              "type": "string",
              "required": false,
              "name": "Name",
              "description": "The caller id name for the object type",
              "maxLength": 30
            },
            "number": {
              "type": "string",
              "required": false,
              "name": "Number",
              "description": "The caller id name for the object type",
              "maxLength": 15
            }
          }
        },
        "emergency": {
          "type": "object",
          "required": false,
          "name": "Default Emergency Caller-ID",
          "description": "The caller ID used when a resource is flagged as 'emergency'",
          "properties": {
            "name": {
              "type": "string",
              "required": false,
              "name": "Name",
              "description": "The caller id name for the object type",
              "maxLength": 30
            },
            "number": {
              "type": "string",
              "required": false,
              "name": "Number",
              "description": "The caller id name for the object type",
              "maxLength": 15
            }
          }
        }
      },
      "default": {}
    },
    "music_on_hold": {
      "type": "object",
      "required": false,
      "name": "Music on Hold",
      "description": "The default music on hold parameters",
      "properties": {
        "media_id": {
          "type": "string",
          "required": false,
          "name": "Media ID",
          "description": "The ID of a media object that should be used as the default music on hold",
          "maxLength": 128
        }
      },
      "default": {}
    },
    "media": {
      "type": "object",
      "required": false,
      "name": "Default Media Parameters",
      "description": "The default media parameters",
      "properties": {
        "bypass_media": {
          "type": "boolean",
          "required": false,
          "name": "Is Media Direct?",
          "description": "Default bypass media mode"
        },
        "audio": {
          "type": "object",
          "required": false,
          "name": "Audio Options",
          "description": "The default audio media parameters",
          "properties": {
            "codecs": {
              "type": "array",
              "required": false,
              "uniqueItems": true,
              "name": "Codecs",
              "description": "A list of default codecs to use",
              "items": {
                "type": "string",
                "enum": [
                         "G729",
                         "PCMU",
                         "PCMA",
                         "G722_16",
                         "G722_32",
                         "CELT_48",
                         "CELT_64",
                         "Speex",
                         "GSM",
                         "OPUS"
                        ]
              },
              "default": ["PCMU"]
            }
          },
          "default": {}
        },
        "video": {
          "type": "object",
          "required": false,
	  "name": "Video Options",
          "description": "The default video media parameters",
          "properties": {
            "codecs": {
              "type": "array",
              "required": false,
              "uniqueItems": true,
              "description": "A list of default codecs to use",
              "items": {
                "type": "string",
                "enum": [
                         "H261",
                         "H263",
                         "H264",
                         "VP8"
                        ]
              },
              "default": []
            }
          },
          "default": {}
        },
        "fax_option": {
          "type": "boolean",
          "required": false,
          "name": "Is T.38 Supported?",
          "description": "Support T.38"
        }
      },
      "default": {}
    },
    "call_restriction": {
      "type": "object",
      "required": false,
      "name": "Call Restrictions",
      "description": "Account level call restrictions for each available number classification",
      "additionalProperties": {
        "type": "object",
        "required": false,
        "properties": {
          "action": {
            "type": "string",
            "required": false,
            "name": "Action",
            "description": "If set to deny all calls of this type will be rejected.  If set to inherit the user/device rules apply",
            "enum": [
                     "inherit",
                     "deny"
                    ]
          }
        }
      },
      "default": {}
    },
    "dialplan": {
      "type": "object",
      "required": false,
      "name": "Default Dialplan",
      "description": "A list of default rules used to modify dialed numbers",
      "additionalProperties": {
        "type": "object",
        "required": false,
        "properties": {
          "description": {
            "type": "string",
            "required": false,
            "name": "Name",
            "description":"Friendly name for this regex dialplan"
          },
          "prefix": {
            "type": "string",
            "required": false,
            "name": "Prefix",
            "description":"Prefix the prepend to the capture group after applying the regex"
          },
          "suffix": {
            "type":"string",
            "required": false,
            "name": "Suffix",
            "description":"Suffix the append to the capture group after applying the regex"
          }
        }
      },
      "default": {}
    },
    "preflow": {
      "type": "object",
      "required": false,
      "name": "Preflows",
      "description": "Each property provides functionality that can be applied to calls using the callflow application",
      "additionalProperties": false,
      "properties": {
        "always": {
          "type": "string",
          "required": false,
          "name": "Callflow ID",
          "description":"The ID of a callflow to always execute prior to processing the callflow with numbers/patterns matching the request"
        }
      },
      "default": {}
    },
    "notifications": {
      "type": "object",
      "required": false,
      "description": "The notifications parameters for this account",
      "warning": "These parameters will be deprecated shortly and moved to their own API!",
      "properties": {
        "voicemail_to_email": {
          "type": "object",
          "required": false,
          "properties": {
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "deregister": {
          "type": "object",
          "required": false,
          "properties": {
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "password_recovery": {
          "type": "object",
          "required": false,
          "properties": {
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "first_occurrence": {
          "type": "object",
          "required": false,
          "properties": {
            "sent_initial_registration": {
              "type": "boolean",
              "required": false
            },
            "sent_initial_call": {
              "type": "boolean",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "send_to": {
              "type": "string",
              "required": false
            },
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "inbound_fax_error_to_email": {
          "type": "object",
          "required": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "required": false
            },
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "outbound_fax_error_to_email": {
          "type": "object",
          "required": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "required": false
            },
            "email_text_template": {
              "type": "string",
              "required": false
            },
            "email_html_template": {
              "type": "string",
              "required": false
            },
            "email_subject_template": {
              "type": "string",
              "required": false
            },
            "support_number": {
              "type": "string",
              "required": false
            },
            "support_email": {
              "type": "string",
              "required": false
            },
            "service_url": {
              "type": "string",
              "required": false
            },
            "service_name": {
              "type": "string",
              "required": false
            },
            "service_provider": {
              "type": "string",
              "required": false
            },
            "send_from": {
              "type": "string",
              "required": false
            },
            "template_charset": {
              "type": "string",
              "required": false
            }
          }
        },
        "low_balance": {
          "type": "object",
          "required": false,
          "properties": {
            "sent_low_balance": {
              "type": "boolean",
              "required": false
            }
          }
        }
      }
    }
  },
  "default": {}
}
